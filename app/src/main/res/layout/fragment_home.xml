<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_home"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/btn-logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/ghanachocolate"
            android:text="방구석 갤러리"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"

            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:orientation="vertical"

        >


        <ImageButton

            android:id="@+id/btn_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#CCD5D6"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/monk1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sc5"
            android:text="@string/title"
            android:textColor="@android:color/background_dark"
            android:textSize="15sp" />



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/scdream"
        android:text="오늘의 전시회"
        android:textAlignment="center"
        android:textSize="30sp"

        />


</LinearLayout>